<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_startAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/et_destinationAddress"
        android:layout_centerInParent="true"
        android:hint="Enter Starting Address"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/et_destinationAddress"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_startNavigation"
        android:layout_centerInParent="true"
        android:hint="Enter Destination Address"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/bt_startNavigation"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="Start Navigation"
        android:textColor="@color/cardview_light_background"
        android:textSize="18sp" />

</RelativeLayout>